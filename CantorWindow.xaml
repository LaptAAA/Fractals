            <TextBlock>0</TextBlock>
            <TextBlock>2</TextBlock>
            <TextBlock>4</TextBlock>
            <TextBlock>6</TextBlock>
        </ComboBox>
        <Label x:Name="labelName" Content="Множество Кантора" HorizontalAlignment="Center" Margin="0,-3,0,0" VerticalAlignment="Top" Width="179" HorizontalContentAlignment="Center"/>
