        mc:Ignorable="d"
        Title="Window3" Height="148" Width="247" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-16">
        <ComboBox IsSelected="True" HorizontalAlignment="Left" Margin="124,23,0,0" VerticalAlignment="Top" Width="103" SelectionChanged="ComboBox_SelectionChanged_Deep">
