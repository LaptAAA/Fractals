        <Label Content="Глубина рекурсии" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" Width="109"/>
        <Label Content="Отступ" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="109" HorizontalContentAlignment="Center" />

        <Label Content="" HorizontalAlignment="Left" Margin="34,0,0,0" VerticalAlignment="Center" Height="26" Width="30"/>

    </Grid>
</Window>
